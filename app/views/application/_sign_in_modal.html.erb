<div class="ui small modal" id="sign_in">
  <div class="ui icon header">
    <i class="sign in icon"></i>
    <%= t '.sign_in' %>
  </div>
  <div class="content">

  <h2><%#= context_title t(:sign_in, scope: :application) %></h2>

  <%= form_for(:user_session, url: new_user_session_path, html: { class: 'ui form' }) do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if Devise.mappings[:user].rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit t(:sign_in, scope: :application), class: 'ui primary button' %>
    </div>
  <% end %>

  </div>
</div>
