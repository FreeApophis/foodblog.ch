<div id="main-menu" class="ui stackable secondary pointing menu">
  <%#= active_menu_link root_path, t('.home'), :home %>
  <%= active_menu_link blogs_path, t('.blog'), :newspaper %>
  <%= active_menu_link recipes_path, t('.recipes'), :food %>
  <%= active_menu_link ingredients_path, t('.ingredients'), :lab %>

  <div class="right menu">
    <% if current_user %>
      <%= link_to '#sign_out', class: 'ui open_modal item', 'data-modal-id': '#sign_out' do %>
        <i class="sign out icon"></i>
        <%= t '.sign_out' %>
      <% end %>
      <%= render 'sign_out_modal' %>

      <a class="admin item">
        <i class="options icon"></i>
      </a>
    <% else %>
      <%= active_menu_link new_user_registration_path, t('.register'), 'user plus' %>
      <%= link_to '#sign_in', class: 'ui open_modal item', 'data-modal-id': '#sign_in' do %>
        <i class="sign in icon"></i>
        <%= t '.sign_in' %>
      <% end %>
      <%= render 'sign_in_modal' %>
    <% end %>

    <div class="ui category search item">
      <%= form_tag(search_path, method: :get, class: 'ui form') do %>
        <div class="ui transparent icon input">
          <%= search_field_tag :q, params[:q], id: "main-search", class: "prompt", placeholder: 'Search' %>
          <i class="search link icon"></i>
       </div>
        <% end %> 
      <div class="results"></div>
    </div>
  </div>
</div>
