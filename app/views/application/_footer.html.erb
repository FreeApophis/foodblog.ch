<footer>
  <div class="ui padded grid">
    <div class="three column row">
      <div class="column">
        <h3><%= t '.about' %></h3>
        <%= Setting.about %>
        <div class="ui inverted link list">
          <%= link_to t('.impressum'), '#', class: 'item' %>
        </div>
      </div>
      <div class="column">
        <h3><%= t '.site' %></h3>
        <div class="ui inverted link list">
          <%= link_to t('.users'), users_path, class: 'item' %>
          <%= link_to t('.units'), units_path, class: 'item' %>
          <%= link_to t('.activities'), activities_path, class: 'item' %>
        </div>
      </div>
      <div class="column">
        <h3><%= t('.top_recipes') %></h3>
        <div class="ui inverted link list">
          <% policy_scope(Recipe).order(view_count: :desc).limit(5).each do |recipe| %>
            <%= link_to recipe.name, recipe, class: 'item' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</footer>
	
