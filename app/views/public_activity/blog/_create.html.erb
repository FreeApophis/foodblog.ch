<%= render_feed_event activity, 'newspaper' do %>
  <% a = t '.which_was_deleted' %>
  <% if activity.trackable %>
    <% a = link_to(activity.trackable.name, activity.trackable) %>
  <% end %>
  <% u = activity.owner ? link_to(activity.owner.name, activity.owner) : t(:guest, scope: :application) %>
  <%= t('.new_blog_article', article: a, user: u).html_safe%>
<% end %>
