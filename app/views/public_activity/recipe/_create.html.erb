<%= render_feed_event activity, 'food' do %>
  <% r = t '.which_was_deleted' %>
  <% if activity.trackable %>
    <% r = link_to(activity.trackable.name, activity.trackable) %>
  <% end %>
  <% u = activity.owner ? link_to(activity.owner.name, activity.owner) : t(:guest, scope: :application) %>
  <%= t('.new_recipe', recipe: r, user: u).html_safe%>
<% end %>
