<h2><%= context_title @recipe.name %></h2>

<% context_action t('.edit'), edit_recipe_path(@recipe), :write %>
<% context_action t('.delete'), delete_modal(@recipe), :remove %>

<% recipe_presenter = present(@recipe) %>

<p>
  <%= @recipe.description %>
</p>

<p>
By <%= present(@recipe.author).avatar %> - Difficulty: <%= @recipe.difficulty %>
</p>

<div class="ui grid">
  <div class="doubling four columns row">
    <div class="column">
      <a class="ui teal label">
        <i class="wait icon"></i>
        <%= t('.preparation') %>
        <div class="detail">
          <%= @recipe.preparation_time %>min
        </div>
      </a>
    </div>
    <div class="column">
      <a class="ui teal label">
        <i class="wait icon"></i>
        <%= t('.cooking') %>
        <div class="detail">
          <%= @recipe.preparation_time %>min
        </div>
      </a>
    </div>
    <div class="column">
      <a class="ui teal label">
        <i class="doctor icon"></i>
        <%= t('.calories') %>
        <div class="detail">
          <%= @recipe.calories %>kcal
        </div>
      </a>
    </div>
    <div class="column">
      <a class="ui teal label">
        <i class="users icon"></i>
        <%= t('.portions') %>
        <div class="detail">
          <%= @recipe.portions %>
        </div>
      </a>
    </div>
  </div>
</div>

<div class="ui divided grid">
  <div class="row">
    <div class="five wide column">
      <%= recipe_presenter.show_ingredients %>
    </div>
    <div class="eleven wide column">
      <%= recipe_presenter.show_preparation_steps %>
    </div>
  </div>
</div>


