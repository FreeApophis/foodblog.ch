<h2><%= context_title @recipe.name %></h2>
<% context_action t('.edit'), edit_recipe_path(@recipe), :write %>
<% context_action t('.delete'), '#', :remove %>
<%= delete_modal(@recipe, :name) %>

<% if @recipe.images.any? %>
  <div class="ui stackable divided grid">
    <div class="row">
      <div class="eight wide column">
        <%= nivo_slider id: "slider" do %>
          <% @recipe.images.each do |image| %>
            <%= image_tag image.file.url(:slide), title: image.name %>
          <% end %>
        <% end %>
      </div>
      <div class="eight wide column">
        <%= recipe_presenter.formatted_description %>
      </div>
    </div>
  </div>
<% else %>
  <%= recipe_presenter.formatted_description %>
<% end %>


<div class="ui grid">
  <div class="doubling six columns row">
    <div class="column">
      <%= present(@recipe.author).avatar %>
    </div>
    <div class="column">
      <%= recipe_presenter.difficulty_tag  %>
    </div>
    <div class="column">
      <a class="ui basic teal label">
        <i class="wait icon"></i>
        <%= t('.preparation') %>
        <div class="detail">
          <%= @recipe.preparation_time %><%= t('.minutes_unit') %>
        </div>
      </a>
    </div>
    <div class="column">
      <a class="ui basic teal label">
        <i class="wait icon"></i>
        <%= t('.cooking') %>
        <div class="detail">
          <%= @recipe.cooking_time %><%= t('.minutes_unit') %>
        </div>
      </a>
    </div>
    <div class="column">
      <a class="basic ui teal label">
        <i class="doctor icon"></i>
        <%= t('.calories') %>
        <div class="detail">
          <%= @recipe.calories %><%= t('.calories_unit') %>
        </div>
      </a>
    </div>
    <div class="column">
      <a class="basic ui teal label">
        <i class="users icon"></i>
        <%= t('.portions') %>
        <div class="detail">
          <%= @recipe.portions %>
        </div>
      </a>
    </div>
  </div>
</div>

<h4 class="ui horizontal divider header">
  <i class="food icon"></i>
  <%= t('.recipe_instructions') %>
</h4>

<div class="ui stackable divided grid">
  <div class="row">
    <div class="five wide column">
      <%= recipe_presenter.show_ingredients %>
    </div>
    <div class="eleven wide column">
      <%= recipe_presenter.show_preparation_steps %>
    </div>
  </div>
</div>


