<%= form_for(@ingredient, :html => {class: 'ui form'}) do |f| %>
    <%= render 'validation_message', validation_object: @ingredient %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, :placeholder => t('.name_description') %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description, rows: Setting.text_rows, :placeholder => t('.description_description') %>
    </div>
    <div class="field">
      <%= f.label :calories_per_volume %>
      <div class="ui right labeled input">
        <%= f.number_field :calories_per_volume, :placeholder => t('.calories_per_volume_description') %>
        <div class="ui teal label">kcal</div>
      </div>
    </div>
    <div class="field">
      <%= f.label :calories_per_weight %>
      <div class="ui right labeled input">
        <%= f.number_field :calories_per_weight, :placeholder => t('.calories_per_weight_description') %>
        <div class="ui teal label">kcal</div>
      </div>
    </div>
    <div class="field">
      <%= f.label :calories_per_piece %>
      <div class="ui right labeled input">
        <%= f.number_field :calories_per_piece, :placeholder => t('.calories_per_piece_description') %>
        <div class="ui teal label">kcal</div>
      </div>
    </div>

    <%= f.button class: 'ui primary button' %>
    <%= link_to t(:cancel, scope: :application), ingredients_path, class: 'ui secondary button' %>
<% end %>
