<h1>Ingredients</h1>

<table class="ui celled table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td><%= ingredient.description %></td>
        <td><%= link_to 'Show', ingredient %></td>
        <td><%= link_to 'Edit', edit_ingredient_path(ingredient) %></td>
        <td><%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
   <tfoot class="full-width">
    <tr>
      <th colspan="5">
        <%= link_to new_ingredient_path, class: 'ui right floated primary labeled icon button' do %>
          <i class="user icon"></i> Add Ingredient
        <% end %>
      </th>
    </tr>
  </tfoot>
</table>

<br>

