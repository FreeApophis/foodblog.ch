<%= form_for(blog, html: { class: 'ui form', multipart: true }) do |f| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :header_image %>
    <div>
      <%= f.label :header_image, class: "ui teal icon button" do %>
        <%= icon('upload') + t('.select_image') %>
      <% end %>
      <%= f.file_field :header_image, style: 'display:none' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :teaser %>
    <%= f.text_field :teaser %>
  </div>

  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text, class: 'tinymce' %>
  </div>

  <div class="field">
    <%= f.label :published_at %>
    <%= f.datetime_select :published_at %>
  </div>

  <div class="buttons">
    <%= f.submit class: 'ui primary button' %>
  </div>
<% end %>

<%= tinymce %>
